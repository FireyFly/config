let keys = ['ctermfg', 'ctermbg', 'cterm', 'guifg', 'guibg', 'gui']
for [name, val] in items(format_overrides)
  let params = map(val, 'v:val != -1 ? keys[v:key] . "=" . v:val : ""')
  if len(params) == 0 | continue | endif
  exec 'hi ' . name . ' ' . join(params, ' ')
endfor


